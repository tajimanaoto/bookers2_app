<main>
  <p id="notice"><%= notice %></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%=attachment_image_tag current_user, :profile_image, fallback:"no_image.jpg", size: "100x100" %>
        <table class="table font-weight-bold">
          <tbody>
            <tr>
             <td>name</td>
             <td><%= current_user.name %></td>
            </tr>
            <tr>
             <td>introduction</td>
             <td><%= current_user.introduction %></td>
            </tr>
          </tbody>
        </table>
        <div class="row">
         <%= link_to "" , edit_user_path(current_user), class:"btn btn-outline-secondary btn-block fas fa-user-cog edit_user_pat" %>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model:@book, local:true do |f| %>
        <div class="from-group mb-3">
           <label for="book_title">Title</label>
           <%= f.text_field :title, class:"form-control book_title" %>
        </div>
        <div class="from-group mb-3">
          <label for="book_opinion">Opinion</label>
         <%= f.text_area :body, class:"form-control book_body" %>
        </div>
        <div class="from-group mb-3">
          <%= f.submit "Create Book", class:"btn btn-success" %>
        </div>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>Image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td>
                <%= link_to user_path(user.id) do %>
                 <%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg",size:'40x40' %>
                <% end %>
              </td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>